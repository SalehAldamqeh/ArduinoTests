#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

RF24 radio(7, 8); // CE, CSN

const byte address[6] = "00001";
char resR='a';
bool t=0;
void setup() {
  radio.begin();
  radio.openWritingPipe(address);
  radio.setPALevel(RF24_PA_MIN);
  radio.stopListening();
  Serial.begin(9600);
}
int x=0;
void loop() {
  char text[32];
  text[1]=(x>>8);
  text[0]=x;
  radio.write(&text, sizeof(text));
  x++;
  Serial.println(x);
  delay(100);
}
